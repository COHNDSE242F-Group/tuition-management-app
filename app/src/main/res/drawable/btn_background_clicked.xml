<!-- res/drawable/btn_background_pressed.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2c4a66" /> <!-- deeper shadow -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Pressed background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#2c3e50"
                android:endColor="#3a6073"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>