<!-- res/drawable/btn_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#30587A" /> <!-- darker shadow -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Button background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#3a6073"
                android:endColor="#3a7bd5"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>