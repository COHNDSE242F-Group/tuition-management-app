<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow: push it more to bottom-right with stronger color -->
    <item android:left="6dp" android:top="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000"/> <!-- semi-transparent black for real shadow look -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Button Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#3a6073"
                android:endColor="#3a7bd5"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>