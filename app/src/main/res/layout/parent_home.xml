<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Welcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/card_bg"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome, Parent!"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We dedicate our knowledge and care to help your child grow with excellence."
                        android:textSize="14sp"
                        android:textColor="#777777"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- All Functional Buttons -->
            <Button
                android:id="@+id/btnAttendance"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_background"
                android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                android:drawablePadding="16dp"
                android:text="Attendance"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/btnFeeStatus"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_background"
                android:drawableLeft="@drawable/payment"
                android:drawablePadding="16dp"
                android:text="Fee Status"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/btnAssignments"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_background"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:drawablePadding="16dp"
                android:text="Notifications"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/btnResults"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_background"
                android:drawableLeft="@android:drawable/ic_menu_agenda"
                android:drawablePadding="16dp"
                android:text="Results"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/btnappointment"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_background"
                android:drawableLeft="@android:drawable/ic_dialog_email"
                android:drawablePadding="16dp"
                android:text="Appointment"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/btnTimetable"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_background"
                android:drawableLeft="@android:drawable/ic_menu_month"
                android:drawablePadding="16dp"
                android:text="Timetable"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:elevation="4dp"
                android:gravity="center_vertical" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Right Logout -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="@drawable/btn_background"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:elevation="6dp" />

    <!-- Bottom Left Test Button for Appointment Response -->
    <Button
        android:id="@+id/btnResponse"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Respond"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="@drawable/btn_background"
        android:layout_gravity="bottom|start"
        android:layout_margin="24dp"
        android:elevation="6dp" />

    <Button
        android:id="@+id/btnAddNotification"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Add Notification"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="@drawable/btn_background"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:elevation="6dp" />
</FrameLayout>
